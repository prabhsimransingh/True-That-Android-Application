<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ourapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ttlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name=".CompleteTask"
            android:label="@string/title_activity_complete_task" >
        </activity>
        <activity
            android:name=".CreateTask"
            android:label="@string/title_activity_create_task" >
        </activity>
        <activity
            android:name=".ViewTasks"
            android:label="@string/title_activity_view_tasks" >
        </activity>
        <activity
            android:name=".ViewCompletedTask"
            android:label="@string/title_activity_view_completed_task" >
        </activity>
        <activity
            android:name=".ListCompletedTasks"
            android:label="@string/title_activity_list_completed_tasks" >
        </activity>
    </application>

</manifest>