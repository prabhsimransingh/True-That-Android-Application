<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shivangi.truethatapp.CreateTask" >

    <EditText
        android:id="@+id/et_createTask_what"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_createTask_where"
        android:layout_below="@+id/tv_createTask_what"
        android:background="@drawable/textlines"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_createTask_where"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_createTask_what"
        android:layout_marginTop="28dp"
        android:text="Where do want this picture from?"
        android:textColor="#FFFFFF" />

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_createTask_submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_createTask_when"
        android:background="@color/White" />

    <EditText
        android:id="@+id/et_createTask_where"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_createTask_where"
        android:layout_below="@+id/tv_createTask_where"
        android:background="@drawable/textlines"
        android:ems="10"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_createTask_when"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/datePicker1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_createTask_where"
        android:layout_marginTop="14dp"
        android:text="By when do you want this picture?"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_createTask_what"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_createTask_what"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="What picture do you want?"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_createTask_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttonshape"
        android:onClick="home"
        android:text="Create Task"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_createTask_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/datePicker1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonshape"
        android:onClick="home"
        android:text="Cancel"
        android:textColor="#FFFFFF" />

</RelativeLayout>